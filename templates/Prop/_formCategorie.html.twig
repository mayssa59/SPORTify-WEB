
{{form_start(form,{'attr':{'novalidate':'novalidate'}})}}


<div class="form-inline">
    <div class="form-group col-md-6">
        {{ form_widget(form.id,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Id Categorie'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.id) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.type,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Type Categorie'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{  form_errors(form.type) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.description,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'description Categorie'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{  form_errors(form.description) }}
        </div>
    </div>
</div>
<br>
<div style="text-align: center;">
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>
<br>


{{ form_end(form) }}




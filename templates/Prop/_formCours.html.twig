    {{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
<div class="form-inline">
    <div class="form-group col-md-6">
        {{ form_widget(form.idCours,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Reference Du Cours'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.idCours) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.typeCours,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Type Du Cours'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.typeCours) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.date) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.date) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.heure,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Heure(H)'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.heure) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.duree,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Duree(MIN)'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.duree) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.placeDisponible,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Place Disponible'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.placeDisponible) }}
        </div>
    </div>

    <div class="form-group col-md-6">
        <div style="text-align: center;">
            {{ form_widget(form.mailcoach,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Mail Coach'}}) }}
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
                {{ form_errors(form.mailcoach) }}
            </div>
        </div>
    </div>
    <div class="form-group col-md-6">
        <div style="text-align: center;">
            {{ form_widget(form.nomsalledesport,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Mail Coach'}}) }}
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
                {{ form_errors(form.nomsalledesport) }}
            </div>
        </div>
    </div>




</div>
<div style="text-align: center;">
    <br>
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>

<br>

{{ form_end(form) }}



    {{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
<div class="form-inline">

    <div class="form-group col-md-6">
        {{ form_widget(form.typeAbonnement,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'typeAbonnement'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.typeAbonnement) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.prixAbonnement,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'prixAbonnement'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.prixAbonnement) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.surnomUser,{'attr': {'class': 'form-control w-100 mt-2 mb-2'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.surnomUser) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_label(form.datecreation,"Date") }}
        {{ form_widget(form.datecreation) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.datecreation) }}
        </div>
    </div>

</div>

<div style="text-align: center;">
    <br>
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>

<br>
{{ form_end(form) }}
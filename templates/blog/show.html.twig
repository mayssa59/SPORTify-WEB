{% extends 'template.html.twig' %}

{% block title %}Blog{% endblock %}

{% block form %}
<div style="text-align: center;">
    <h3 class="m-0 font-weight-bold text-primary">Blog</h3>
</div>
<div class="card shadow-lg h-75 m-4 mt-8">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blog.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ blog.auteur }}</td>
            </tr>
        </tbody>
    </table>
    <div style="text-align: center;">

    <div style="text-align: center;">
                <a class="btn btn-secondary" href="{{ path('blog_index') }}">Liste des blogs</a>

                <a class="btn btn-primary" href="{{ path('blog_edit', {'id': blog.id}) }}">Modifier</a>
            </div>
    </div>

            {{ include('blog/_delete_form.html.twig') }}

            {% endblock %}
{% extends 'template.html.twig' %}

{% block title %}Evennement{% endblock %}

{% block form %}

<div style="text-align: center;">
    <h3 class="m-0 font-weight-bold text-primary">Evennements</h3>
</div>

<div class="card shadow-lg h-75 m-4 mt-8">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                <tr>
                    <th>IdEvennement</th>
                    <td>{{ evennement.idEvennement }}</td>
                </tr>
                <tr>
                    <th>NomEvennement</th>
                    <td>{{ evennement.nomEvennement }}</td>
                </tr>
                <tr>
                    <th>Nbplaces</th>
                    <td>{{ evennement.nbplaces }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ evennement.description }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ evennement.date ? evennement.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Nom_Salle</th>
                    <td>{{ evennement.nomSalle }}</td>
                </tr>
                </tbody>
            </table>

    <div style="text-align: center;">
        <a class="btn btn-secondary" href="{{ path('evennement_index') }}">back to list</a>

        <a class="btn btn-primary" href="{{ path('evennement_edit', {'idEvennement': evennement.idEvennement}) }}">edit</a>

        {{ include('evennement/_delete_form.html.twig') }}
    </div>
{% endblock %}
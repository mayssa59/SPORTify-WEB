    {{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
<div class="form-inline">

    <div class="form-group col-md-6">
        {{ form_widget(form.libelle,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'libelle Du Produits'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.libelle) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.quantites) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.quantites) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.prix) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.prix) }}
        </div>
    </div>
    <div class="form-group col-md-6">
        {{ form_widget(form.type,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'type Du Produits'}}) }}
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.type) }}
        </div>
    </div>




</div>
<div style="text-align: center;">
    <br>
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>

<br>

{{ form_end(form) }}



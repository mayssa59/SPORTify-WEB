{% extends 'template.html.twig' %}


{% block form %}
    <div style="text-align: center;">
        <h3>Zone</h3>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Region</th>
            <td>{{ zone.region }}</td>
            <th>Longitude</th>
            <td>{{ zone.lng }}</td>
            <th>Latitude</th>
            <td>{{ zone.lat }}</td>
        </tr>
        </tbody>
    </table>
    <div style="text-align: center;">
        <a  class="btn btn-primary" href="{{ path('zone') }}">back to list</a>

        <a class="btn btn-primary" href="{{ path('zone_edit', {'region': zone.region}) }}">edit</a>

        {{ include('zone/_delete_form.html.twig') }}
    </div>



{% endblock %}
